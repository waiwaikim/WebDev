<%- include('../partials/header')%>

<div class="container">
    <div class="row" id="form title" >
        <h1 style="text-align: center;" >Add a new commen to <%= climbinggym.name%> </h1>
    </div>
    <div class="row">
        <div style="width: 30%; margin: 30px auto; ">
            <form action="/climbinggyms/<%= climbinggym._id%>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="author">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-outline-dark btn-block">submit</button>
                </div>
            </form>
            <a href="/climbinggyms">Go Back</a>
        </div>
    </div>

    
</div>


<%- include('../partials/footer')%>