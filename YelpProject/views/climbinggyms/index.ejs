<%- include("../partials/header") %>


<div class="container">

    <header class="jumbotron">
        <div class="container">
            <h1>View all climbing gyms!</h1> 
            <p>View our hand-picked climbing gyms from all over the world</p>
            <p>
                <a class="btn btn-primary btn-large" href="climbinggyms/new">Add a new climbing gym</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style = "display: flex; flex-wrap: wrap;">
        <% gyms.forEach(gym => { %>
            <div class="col-md-3 col-sm-6">
                <div class="img-thumbnail">
                    <img width=100% src="<%=gym.image%>" >
                    <div class="caption">
                        <h4><%= gym.name; %></h4>
                    </div>
                    <p>
                        <a href="/climbinggyms/<%= gym._id%>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
                
            </div>                
        <% }); %>
     
    </div>
    <%- include("../partials/footer") %>
</div>
